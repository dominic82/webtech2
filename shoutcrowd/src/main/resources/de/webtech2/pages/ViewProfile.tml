<html t:type="layout" title="About shoutcrowd"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <body>
        <div id="cwrapper">
            <div id="cleft">
                <t:ProfileDetails userId="user.id"/>
                <t:if test="isLoggedUser">
                    <t:CreateMessage/>
                </t:if>
            </div>
            <div id="cright">
                <t:pagination list="messageList" item="message" page="messagePage" amount="'5'"  
                    format="'first,previous,pages,next,last,bottom,top'" >
                    <t:SingleMessage message="message" />
                </t:pagination>
            </div>
        </div>
    </body>
</html>
