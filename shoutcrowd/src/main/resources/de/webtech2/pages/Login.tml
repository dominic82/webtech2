<html t:type="layout" title="${message:title}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <body>
        <div id="login">
            <h1>
                Login now!
            </h1>
            <form action="#" method="POST">
                <input type="text" placeholder="name/email" size="60"/><br/>
                <input type="password" placeholder="password" size="60"/><br/>
                <input type="submit" value="login"/><br/>
            </form>
        </div>
        <div id="login_fail">
            Your login failed! Please try again.<br/>
            <a href="example2.html">register now!</a>
        </div>
    </body>
</html>
