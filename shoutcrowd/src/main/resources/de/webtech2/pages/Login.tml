<html t:type="layout" title="${message:title}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <body>
        <div id="login">
            <h1>
                Login now!
            </h1>
            <form t:type="form" t:id="loginForm">
                <t:errors/>

                <t:label for="loginname"/>:
                <input t:type="TextField" t:id="loginname" value="loginname" t:validate="required,minlength=3" size="30"/>
                <br/>
                <t:label for="password"/>:
                <input t:type="PasswordField" t:id="password" value="password" t:validate="required,minlength=3" size="30"/>
                <br/>
                <input type="submit" value="Login"/>
            </form>
        </div>
        <div id="login_fail">
            <t:pagelink class="button_link" page="createAccount">register now!</t:pagelink>
        </div>
    </body>
</html>
