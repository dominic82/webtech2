<html t:type="layout" title="${message:title}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <body>
        <h1>Edit Profile / Create Account</h1>
        <form action="#" method="POST">
            <table border="0" id="account_table">
                <tr>
                    <td>
                        nickname*:
                    </td>
                    <td>
                        <input type="text" size="40" placeholder="nickname"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        eMail*:
                    </td>
                    <td>
                        <input type="text" size="40" placeholder="email"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        password*:
                    </td>
                    <td>
                        <input type="password" size="40"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        repeat password*:
                    </td>
                    <td>
                        <input type="password" size="40"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        Avatar:
                    </td>
                    <td>
                        <input type="file"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        I've read the license agreement and fucked ya mommy!*
                    </td>
                    <td>
                        <input type="checkbox" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Fields marked with an * must be filled
                    </td>
                    <td>
                        <input type="submit"  value="save/create"/>
                    </td>
                </tr>
            </table>


        </form>
    </body>
</html>