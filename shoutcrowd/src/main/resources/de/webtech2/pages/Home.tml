<html t:type="layout" title="About shoutcrowd"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <body>
        <div id="cwrapper">
            <div id="cleft">
                <t:ProfileDetails userId="user.id"/>
                <t:if test="isLoggedUser">
                    <t:CreateMessage/>
                </t:if>
            </div>
            <div id="cright">
                <t:leaf.leaf source="source" value="item">
                    <t:SingleMessage messageId="item.id" />
                </t:leaf.leaf>
            </div>
        </div>
    </body>
</html>
