<!DOCTYPE html>

    <html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    
    <body>
        <div class="cline" style="height:150px;">
            <div id="profile_img">
                <img src="${context:layout/images/sample_noavatar_big.jpg}" alt="avt"/>
            </div>
            <div id="profile_name">

                <h1>${user.username}</h1>
                <t:if test="isLoggedUser">
                    <b>userEmail:  </b>${user.email}<br/>
                </t:if>
                <b>userShoutCount: </b>${shoutcount}<br/>
            </div>
            <div id="profile_functions">
                <t:if test="isLoggedUser">
                    <t:pagelink class="button_link" page="EditProfile">editProfile</t:pagelink><br/>
                    <t:pagelink class="button_link" page="viewProfile" context="user.id">ViewProfile</t:pagelink><br/>
                    <br/>
                    <t:pagelink class="button_link" page="ViewList" context="['outInvites','']">sentInvites (${sentinvitecount})</t:pagelink><br/>
                    <t:pagelink class="button_link" page="ViewList" context="['inInvites','']">recievedInvites (${recivedinvitecount})</t:pagelink><br/>
                </t:if>
                <t:unless test="isLoggedUser">
                    <t:if test="viewFollowing">
                        <a href="#" t:type="actionlink" t:id="doDeleteFollowing" id="doDeleteFollowing" t:context="user.id">Unfollow Idol</a><br/>
                    </t:if>
                    <t:if test="viewFollowed">
                        <a href="#" t:type="actionlink" t:id="doDeleteFollowed" id="doDeleteFollowed" t:context="user.id">Unfollow Fan</a><br/>
                    </t:if>
                    <t:if test="viewInInvites">
                        <a href="#" t:type="actionlink" t:id="doAcceptInInvite" id="doAcceptInInvite" t:context="user.id">Accept Invite from Idol</a><br/>
                        <a href="#" t:type="actionlink" t:id="doCancelInInvite" id="doCancelInInvite" t:context="user.id">Cancel Invite from Idol</a><br/>
                    </t:if>
                    <t:if test="viewOutInvites">
                        <a href="#" t:type="actionlink" t:id="doCancelOutInvite" id="doCancelOutInvite" t:context="user.id">Cancel sent Invite</a><br/>
                    </t:if>
                    <t:if test="viewSendInvite">
                        <a href="#" t:type="actionlink" t:id="doSendInvite" id="doSendInvite" t:context="user.id">Send Invite</a><br/>
                    </t:if>
                </t:unless>
            </div>
        </div>
    </body>
</html>
