<!DOCTYPE html>

     <html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <body>
        <div id="header_left">
            <t:pagelink id="logo" page="Index"><img src="${context:layout/images/logo.png}" alt="logo" /></t:pagelink>
        </div>
        <div id="header_center">
            <t:if test="userIsLoggedIn">
                <t:pagelink class="button_link" page="ViewList" context="['following','']">Idols ${idolcount}</t:pagelink>
                <t:pagelink class="button_link" page="ViewList" context="['followed','']">Fans ${fancount}</t:pagelink>
                <t:pagelink class="button_link" page="Home" >Home</t:pagelink>
            </t:if>
        </div>
        <div id="header_right">
            <t:if test="userIsLoggedIn">
                <form t:type="form" t:id="searchForm" style="float:left;">
                    <input t:type="TextField" t:id="searchText" t:value="searchText" placeholder="search for..." size="20" style="width: 100px;" />
                    <t:submit t:id="searchSubmit" value="Search"/>
                </form>
                <a href="#" class="button_link" t:type="actionlink" t:id="logout" id="logout">Logout</a>
                <p:else>
                    <t:pagelink class="button_link" page="Login">Login</t:pagelink>
                </p:else>
            </t:if>
        </div>
    </body>
</html>
