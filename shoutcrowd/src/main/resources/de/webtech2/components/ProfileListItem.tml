<!DOCTYPE html>

    <html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    
    <body>
        <!-- ein user entry start -->
        <div class="cline">
            <div class="shoutercell">
                <div class="shout_img">
                    <img src="layout/images/sample_noavatar_small.jpg" alt=""/>
                </div>
                <div class="shout_name">
                    ${user.email}<br/>
                    <h1>${user.username}</h1>
                </div>
                <div class="shout_functions">
                    <t:if test="viewFollowing">
                        <a href="#" t:type="actionlink" t:id="doUnfollowFollowing" id="doUnfollowFollowing">Unfollow</a>
                    </t:if>
                    <t:if test="viewFollowed">
                        <a href="#" t:type="actionlink" t:id="doUnfollowFollowed" id="doUnfollowFollowed">Unfollow</a>
                    </t:if>
                    <t:if test="viewInInvites">
                        <a href="#" t:type="actionlink" t:id="doAcceptInInvite" id="doAcceptInInvite">Accept Invite</a>
                        <a href="#" t:type="actionlink" t:id="doCancelInInvite" id="doCancelInInvite">Cancel Invite</a>
                    </t:if>
                    <t:if test="viewOutInvites">
                        <a href="#" t:type="actionlink" t:id="doCancelOutInvite" id="doCancelOutInvite">Cancel Invite</a>
                    </t:if>
                    <t:if test="viewSearch">
                        <a href="#" t:type="actionlink" t:id="doSendInvite" id="doSendInvite">Send Invite</a>
                    </t:if>
                </div>
            </div>
        </div>
        <!-- ein user entry end -->
    </body>
</html>
