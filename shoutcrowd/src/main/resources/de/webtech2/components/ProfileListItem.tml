<!DOCTYPE html>

    <html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    
    <body>
        <!-- ein user entry start -->
        <div class="cline">
            <div class="shoutercell">
                <div class="shout_img">
                    <img src="${context:layout/images/sample_noavatar_small.jpg}" alt=""/>
                </div>
                <div class="shout_name">
                    ${user.email}<br/>
                    <h1><t:pagelink page="viewProfile" context="user.id">${user.username}</t:pagelink></h1>
                </div>
                <div class="shout_functions">
                    <t:if test="viewFollowing">
                        <a href="#" t:type="actionlink" t:id="doDeleteFollowing" id="doDeleteFollowing" t:context="user.id">Unfollow Idol</a>
                    </t:if>
                    <t:if test="viewFollowed">
                        <a href="#" t:type="actionlink" t:id="doDeleteFollowed" id="doDeleteFollowed" t:context="user.id">Unfollow Fan</a>
                    </t:if>
                    <t:if test="viewInInvites">
                        <a href="#" t:type="actionlink" t:id="doAcceptInInvite" id="doAcceptInInvite" t:context="user.id">Accept Invite from Idol</a>
                        <a href="#" t:type="actionlink" t:id="doCancelInInvite" id="doCancelInInvite" t:context="user.id">Cancel Invite from Idol</a>
                    </t:if>
                    <t:if test="viewOutInvites">
                        <a href="#" t:type="actionlink" t:id="doCancelOutInvite" id="doCancelOutInvite" t:context="user.id">Cancel sent Invite</a>
                    </t:if>
                    <t:if test="viewSendInvite">
                        <a href="#" t:type="actionlink" t:id="doSendInvite" id="doSendInvite" t:context="user.id">Send Invite</a>
                    </t:if>
                </div>
            </div>
        </div>
        <!-- ein user entry end -->
    </body>
</html>
